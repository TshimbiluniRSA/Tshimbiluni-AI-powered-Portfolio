# Backend Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=Tshimbiluni AI-powered Portfolio
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./portfolio.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/portfolio
# For MySQL: mysql+aiomysql://user:password@localhost:3306/portfolio

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=true

# LLM Provider Configuration
# Choose your preferred LLM provider: llama, openai, anthropic, ollama
DEFAULT_LLM_MODEL=llama
MAX_TOKENS=2048
TEMPERATURE=0.7
LLM_TIMEOUT=60

# LLaMA / Hugging Face Configuration
LLAMA_API_URL=https://api-inference.huggingface.co/models/meta-llama/Llama-2-7b-chat-hf
HUGGINGFACE_TOKEN=your_huggingface_token_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_API_URL=https://api.github.com

# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=https://your-domain.com/api/linkedin/oauth/callback
# For local development: http://localhost:8000/api/linkedin/oauth/callback

# Session Configuration
SESSION_SECRET_KEY=your_secret_key_here_min_32_characters_long
SESSION_EXPIRE_MINUTES=1440

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
CACHE_TYPE=memory
CACHE_TTL_SECONDS=3600
REDIS_URL=redis://localhost:6379/0

# Monitoring & Analytics
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_here_optional

# Feature Flags
ENABLE_CHAT=true
ENABLE_GITHUB_SYNC=true
ENABLE_LINKEDIN_SYNC=false
ENABLE_STREAMING=true

# Security
API_KEY_HEADER=X-API-Key
API_KEYS=your_api_key_1,your_api_key_2
